@{
    ViewData["Title"] = "Login";
}



<div>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-@((ViewBag.Message.Contains("success")) ? "success" : "danger")">
            @ViewBag.Message
        </div>
    }
</div>





<div class="main">




   

    <div class="row justify-content-center">
        <div class="col-md-5 mt-5 mb-3 shadow-lg" style="border-radius:10px">
            <div class="card-body">
                <h3 class="text-center text-info font-weight-bold mt-2">Log In</h3>
                <h6 class="text-center text-secondary">Please enter your userid and password.</h6>

                <form asp-action="Login" method="post">
                    <fieldset style="border:1px solid #bfbebe;padding:5px 20px;border-radius:6px;">
                        <legend style="font-size:14px;margin:0px 6px 0px 6px;padding:0px 5px;color:#0000FF;">
                            <b>User Information</b>
                        </legend>

                        <div class="form-group">
                            <label for="username">UserID</label>
                            <input name="username" type="text" id="username" class="form-control form-control-sm" placeholder="vendor code or personal no." required />
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input name="password" type="password" id="password" class="form-control form-control-sm" required />
                        </div>

                        <div class="form-check">
                            <input id="keep" type="checkbox" name="RememberMe" class="form-check-input" />
                            <label for="keep" class="form-check-label">Keep me logged in</label>
                        </div>

                        <div class="text-center mt-2">
                            <button type="submit" class="btn btn-primary btn-sm w-75" style="background-color:#339933;">Log In</button>
                        </div>
                    </fieldset>
                </form>

                <div class="text-center mb-2 mt-2">
                    <a href="@Url.Action("ForgotPassword", "User")" class="badge badge-info">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>

</div>